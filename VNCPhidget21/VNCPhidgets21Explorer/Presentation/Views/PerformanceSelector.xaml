                        <dxlc:LayoutItem Label="Stepper" HorizontalAlignment="Left" Background="Wheat" >
                            <dxe:TextEdit Text="{Binding SelectedStepperSequence.Steppers[0].SerialNumber }" />
                        </dxlc:LayoutItem>

