    <dxlc:LayoutControl View="Group" Orientation="Vertical" >
        

            <dxlc:LayoutItem Label="PerformanceConfig Files" HorizontalAlignment="Left" >
                <dxe:ComboBoxEdit Width="250" 
                                    ItemsSource="{Binding PerformanceConfigFiles}"
                                    SelectedItem="{Binding PerformanceConfigFileName}" >
                </dxe:ComboBoxEdit>
            </dxlc:LayoutItem>
        
        <!--<dxlc:LayoutItem Label="PerformanceConfig FileName" Background="Wheat">
            <dxe:TextEdit
            		    Text="{Binding PerformanceConfigFileName }"
                	    ToolTip="{Binding PerformanceConfigFileNameToolTip }">
