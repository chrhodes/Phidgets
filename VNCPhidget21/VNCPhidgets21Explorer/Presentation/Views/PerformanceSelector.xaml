		                        Content="{Binding PlayInterfaceKitSequenceContent, FallbackValue='PlayInterfaceKitSequence' }"
		                        ToolTip="{Binding PlayInterfaceKitSequenceToolTip, FallbackValue='PlayInterfaceKitSequence ToolTip' }" />
                        </dxlc:LayoutItem>

                    </dxlc:LayoutGroup>

                </dxlc:LayoutGroup>

                <dxlc:LayoutItem Label="Log PerformanceStep" >
                    <dxe:CheckEdit IsChecked="{Binding LogPerformanceStep}"/>
                </dxlc:LayoutItem>

            </dxlc:LayoutGroup>

            <dxlc:LayoutGroup Header="Stepper Sequences" View="GroupBox" Orientation="Vertical" IsCollapsible="True" IsCollapsed="True" >

                <dxlc:LayoutItem Label="Stepper Sequence ConfigFiles" HorizontalAlignment="Left" >
                    <dxe:ComboBoxEdit Width="250" 
                                    ItemsSource="{Binding StepperSequenceConfigFiles}"
                                    SelectedItem="{Binding StepperSequenceConfigFileName}" >
                    </dxe:ComboBoxEdit>
                </dxlc:LayoutItem>
