		                    Command="{Binding OpenAdvancedServoCommand }"
		                    Content="{Binding OpenAdvancedServoContent, FallbackValue='OpenIK' }"
		                    ToolTip="{Binding OpenAdvancedServoToolTip, FallbackValue='OpenIK ToolTip' }" />
